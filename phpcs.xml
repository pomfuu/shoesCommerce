<?xml version="1.0"?>
<ruleset name="Laravel">
    <description>Laravel coding standard</description>
    <file>./app</file>
    <file>./bootstrap</file>
    <file>./config</file>
    <file>./database</file>
    <file>./public</file>
    <file>./resources</file>
    <file>./routes</file>
    <file>./tests</file>
    <file>./vendor</file>
    <file>./storage</file>
    <exclude-pattern>/storage/framework/</exclude-pattern>
    <arg name="basepath" value="." />
    <arg name="bootstrap" value="bootstrap/app.php" />
    <arg name="warning-severity" value="0" />
</ruleset>
